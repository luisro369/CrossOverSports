<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisro00005513.crossoversports.Fragments.FragmentCreate.FragmentCreateTournaments"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ic_team_default"
        android:background="@color/secondaryLightColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tournament Name"
        android:gravity="center"/>
    <EditText
        android:id="@+id/create_tournament_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tournament Country"/>
    <EditText
        android:id="@+id/create_tournament_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Link"/>
    <EditText
        android:id="@+id/create_tournament_ImageLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/create_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TOURNAMENT"
        android:background="@color/secondaryDarkColor"
        android:textColor="@color/primaryTextColor"
        android:padding="8dp"/>
</LinearLayout>
