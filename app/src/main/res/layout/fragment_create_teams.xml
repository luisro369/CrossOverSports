<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisro00005513.crossoversports.Fragments.FragmentCreate.FragmentCreateTeams"
    android:background="@color/primaryLightColor"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/create_team_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#fff"
        android:paddingBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/primaryDarkColor">
            <ImageView
                android:id="@+id/create_teamavatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_team_default"
                android:background="@color/secondaryLightColor"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:paddingTop="8dp"
            android:id="@+id/create_playername_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team name"
            android:gravity="center"/>
        <EditText
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/create_playerknown_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team country"
            android:gravity="center"/>
        <EditText
            android:id="@+id/team_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team avatar"
            android:gravity="center"/>
        <EditText
            android:id="@+id/team_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team division"
            android:gravity="center"/>
        <EditText
            android:id="@+id/team_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team city"
            android:gravity="center"/>
        <EditText
            android:id="@+id/team_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <Button
            android:id="@+id/btnCreateTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add team"
            android:background="@color/secondaryDarkColor"
            android:padding="16dp"
            android:shadowColor="@color/primaryDarkColor"
            android:textColor="@color/primaryTextColor"
            android:textColorHighlight="@color/secondaryLightColor"/>

    </LinearLayout>

</ScrollView>
