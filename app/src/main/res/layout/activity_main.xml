<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luisro00005513.crossoversports.Activities.MainActivity">

    <fragment
        android:id="@+id/fragmento_padre"
        android:name="com.luisro00005513.crossoversports.Fragments.FragmentoExplore"
        class="com.luisro00005513.crossoversports.Fragments.FragmentoExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        tools:layout="@layout/fragmento_explore"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"
        />

</LinearLayout>
