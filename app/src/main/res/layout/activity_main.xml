<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisro00005513.crossoversports.Activities.MainActivity"
    android:orientation="vertical"
    >

    <fragment
        android:layout_weight="1"
        android:id="@+id/fragmento_padre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.luisro00005513.crossoversports.Fragments.FragmentoMenu"
        android:name="com.luisro00005513.crossoversports.Fragments.FragmentoMenu"
        tools:layout="@layout/fragmento_menu"
        />

    <android.support.design.widget.BottomNavigationView
        android:layout_weight="0"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
