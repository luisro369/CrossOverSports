<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisro00005513.crossoversports.Fragments.FragmentHome.FavoritePlayersFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/borrame_imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/gentek"
        />

    <TextView
        android:id="@+id/borrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragmento players favoritos papi"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@color/rojo"
        />

</LinearLayout>
